---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const {
  title,
  description,
  image,
  hideHeader = false,
  hideFooter = false,
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class="min-h-screen bg-bg-primary text-stone-100 overflow-x-hidden">
    {!hideHeader && <Header />}
    <main>
      <slot />
    </main>
    {!hideFooter && <Footer />}
  </body>
</html>
