---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  incidentDate?: Date;
  author: {
    name: string;
    avatar?: string;
    role?: string;
  };
  category: string;
  tags: string[];
  image?: {
    src: string;
    alt: string;
  };
  readingTime?: number;
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  incidentDate,
  author,
  category,
  tags,
  image,
  readingTime,
} = Astro.props;

// Format dates
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};

// Category display names and colors
const categoryMap: Record<string, { label: string; color: string }> = {
  'changelog': { label: 'Changelog', color: 'bg-blue-500/20 text-blue-400 border-blue-500/30' },
  'tutorials': { label: 'Tutorial', color: 'bg-green-500/20 text-green-400 border-green-500/30' },
  'security-news': { label: 'Security News', color: 'bg-red-500/20 text-red-400 border-red-500/30' },
  'engineering': { label: 'Engineering', color: 'bg-purple-500/20 text-purple-400 border-purple-500/30' },
  'case-studies': { label: 'Case Study', color: 'bg-amber-500/20 text-amber-400 border-amber-500/30' },
};

const categoryInfo = categoryMap[category] || { label: category, color: 'bg-zinc-500/20 text-zinc-400 border-zinc-500/30' };

// Breadcrumbs for schema
const breadcrumbs = [
  { name: 'Home', url: 'https://artemiskit.vercel.app/' },
  { name: 'Blog', url: 'https://artemiskit.vercel.app/blog/' },
  { name: title, url: Astro.url.href },
];

// Article schema
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": image ? `https://artemiskit.vercel.app${image.src}` : "https://artemiskit.vercel.app/og-image.png",
  "datePublished": pubDate.toISOString(),
  "dateModified": (updatedDate || pubDate).toISOString(),
  "author": {
    "@type": "Person",
    "name": author.name,
  },
  "publisher": {
    "@type": "Organization",
    "name": "ArtemisKit",
    "logo": {
      "@type": "ImageObject",
      "url": "https://artemiskit.vercel.app/artemiskit-icon.png"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": Astro.url.href
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`${title} | ArtemisKit Blog`}
      description={description}
      image={image?.src || '/og-image.png'}
      breadcrumbs={breadcrumbs}
    />
    <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
  </head>
  <body class="min-h-screen bg-bg-primary text-stone-100 overflow-x-hidden">
    <Header />
    <main>
      <article class="py-20 md:py-32">
        <!-- Hero Section -->
        <header class="max-w-4xl mx-auto px-6 lg:px-8 mb-16">
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm text-zinc-500 mb-10">
            <a href="/" class="hover:text-zinc-300 transition-colors duration-200">Home</a>
            <svg class="w-4 h-4 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7" />
            </svg>
            <a href="/blog/" class="hover:text-zinc-300 transition-colors duration-200">Blog</a>
            <svg class="w-4 h-4 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7" />
            </svg>
            <a href={`/blog/category/${category}/`} class="hover:text-zinc-300 transition-colors duration-200 capitalize">{categoryInfo.label}</a>
          </nav>

          <!-- Category Badge -->
          <span class={`inline-block px-4 py-1.5 text-sm font-medium rounded-full border mb-6 ${categoryInfo.color}`}>
            {categoryInfo.label}
          </span>

          <!-- Incident Date Banner (for security news) -->
          {incidentDate && category === 'security-news' && (
            <div class="flex items-center gap-3 mb-6 px-4 py-3 bg-red-500/10 border border-red-500/20 rounded-xl">
              <div class="flex-shrink-0 p-2 bg-red-500/20 rounded-lg">
                <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <div>
                <span class="text-xs font-medium text-red-400 uppercase tracking-wider">Incident Reported</span>
                <p class="text-sm text-zinc-300 font-medium">
                  {formatDate(incidentDate)}
                </p>
              </div>
            </div>
          )}

          <!-- Title -->
          <h1 class="text-4xl md:text-5xl lg:text-[3.5rem] font-bold text-white mb-8 leading-[1.15] tracking-tight">
            {title}
          </h1>

          <!-- Meta Info -->
          <div class="flex flex-wrap items-center gap-5 text-zinc-400">
            <!-- Author -->
            <div class="flex items-center gap-3">
              {author.avatar ? (
                <img src={author.avatar} alt={author.name} class="w-11 h-11 rounded-full ring-2 ring-zinc-800" />
              ) : (
                <div class="w-11 h-11 rounded-full bg-gradient-to-br from-zinc-700 to-zinc-800 flex items-center justify-center ring-2 ring-zinc-800">
                  <span class="text-sm font-semibold text-zinc-300">{author.name[0]}</span>
                </div>
              )}
              <div class="flex flex-col">
                <span class="text-zinc-200 font-medium">{author.name}</span>
                {author.role && <span class="text-sm text-zinc-500">{author.role}</span>}
              </div>
            </div>

            <span class="hidden sm:block w-1 h-1 rounded-full bg-zinc-600"></span>

            <!-- Date -->
            <div class="flex items-center gap-2 text-sm">
              <svg class="w-4 h-4 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <time datetime={pubDate.toISOString()}>
                {formatDate(pubDate)}
              </time>
            </div>

            {updatedDate && (
              <>
                <span class="hidden sm:block w-1 h-1 rounded-full bg-zinc-600"></span>
                <div class="flex items-center gap-2 text-sm text-zinc-500">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                  <span>Updated {formatDate(updatedDate)}</span>
                </div>
              </>
            )}

            {readingTime && (
              <>
                <span class="hidden sm:block w-1 h-1 rounded-full bg-zinc-600"></span>
                <div class="flex items-center gap-2 text-sm">
                  <svg class="w-4 h-4 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{readingTime} min read</span>
                </div>
              </>
            )}
          </div>

          <!-- Tags -->
          {tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-8 pt-8 border-t border-zinc-800/50">
              {tags.map(tag => (
                <a
                  href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}/`}
                  class="px-3 py-1.5 text-xs font-medium bg-zinc-800/60 text-zinc-400 rounded-lg hover:bg-zinc-700/60 hover:text-zinc-300 transition-colors duration-200"
                >
                  #{tag}
                </a>
              ))}
            </div>
          )}
        </header>

        <!-- Featured Image -->
        {image && (
          <div class="max-w-5xl mx-auto px-6 lg:px-8 mb-16">
            <div class="rounded-2xl overflow-hidden border border-zinc-800/80">
              <img
                src={image.src}
                alt={image.alt}
                class="w-full"
                width="1200"
                height="630"
              />
            </div>
          </div>
        )}

        <!-- Content -->
        <div class="max-w-4xl mx-auto px-6 lg:px-8">
          <div class="article-prose">
            <slot />
          </div>
        </div>

        <!-- Footer CTA -->
        <div class="max-w-4xl mx-auto px-6 lg:px-8 mt-20 pt-16 border-t border-zinc-800/50">
          <div class="relative overflow-hidden bg-gradient-to-br from-zinc-900 via-zinc-900 to-zinc-800/50 border border-zinc-800 rounded-2xl p-10 md:p-12">
            <!-- Background decoration -->
            <div class="absolute top-0 right-0 w-64 h-64 bg-orange-500/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>

            <div class="relative text-center">
              <h3 class="text-2xl md:text-3xl font-bold text-white mb-4">Ready to secure your LLM?</h3>
              <p class="text-zinc-400 mb-8 max-w-xl mx-auto text-lg leading-relaxed">
                ArtemisKit is free, open-source, and ready to help you test, secure, and stress-test your AI applications.
              </p>
              <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                <a
                  href="/docs/cli/getting-started/"
                  class="px-8 py-4 bg-orange-500 hover:bg-orange-600 text-white font-medium rounded-xl transition-all duration-200"
                >
                  Get Started
                </a>
                <a
                  href="https://github.com/code-sensei/artemiskit"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="px-8 py-4 bg-zinc-800 hover:bg-zinc-700 text-white font-medium rounded-xl transition-all duration-200 border border-zinc-700/50 hover:border-zinc-600 flex items-center gap-2"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
                  </svg>
                  View on GitHub
                </a>
              </div>
            </div>
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
