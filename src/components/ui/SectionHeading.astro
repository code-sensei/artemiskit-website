---
interface Props {
  title: string;
  subtitle?: string;
  badge?: string;
  align?: 'left' | 'center';
  class?: string;
}

const {
  title,
  subtitle,
  badge,
  align = 'center',
  class: className
} = Astro.props;

const alignClasses = {
  left: 'text-left',
  center: 'text-center mx-auto',
};
---

<div class:list={['max-w-3xl mb-12 md:mb-16', alignClasses[align], className]}>
  {badge && (
    <span class="inline-block px-3 py-1 text-xs font-medium tracking-wider uppercase text-orange-400 bg-orange-500/10 border border-orange-500/20 rounded-full mb-4">
      {badge}
    </span>
  )}
  <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-zinc-100 mb-4 tracking-tight">
    {title}
  </h2>
  {subtitle && (
    <p class:list={[
      'text-lg md:text-xl text-zinc-500',
      align === 'center' ? 'max-w-2xl mx-auto' : ''
    ]}>
      {subtitle}
    </p>
  )}
</div>
