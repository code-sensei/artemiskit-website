---

<footer class="border-t border-stone-800 bg-bg-secondary">
  <div class="container section">
    <div class="grid grid-cols-2 md:grid-cols-6 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="col-span-2">
        <a href="/" class="flex items-center gap-2 mb-4">
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center">
            <svg
              class="w-5 h-5 text-white"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M12 2L2 7l10 5 10-5-10-5z" />
              <path d="M2 17l10 5 10-5" />
              <path d="M2 12l10 5 10-5" />
            </svg>
          </div>
          <span class="font-semibold text-lg text-stone-50">ArtemisKit</span>
        </a>
        <p class="text-stone-500 text-sm mb-6 max-w-xs">
          Open-source LLM evaluation toolkit for developers and research teams. Apache-2.0 licensed.
        </p>
        <div class="flex items-center gap-3">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-9 h-9 rounded-lg bg-stone-800 hover:bg-stone-700 flex items-center justify-center text-stone-400 hover:text-stone-100 transition-colors"
              aria-label={social.label}
            >
              <svg
                class="w-5 h-5"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                set:html={social.icon}
              />
            </a>
          ))}
        </div>
      </div>

      <!-- Links Columns -->
      <div>
        <h3 class="text-sm font-semibold text-stone-200 mb-4">Product</h3>
        <ul class="space-y-3">
          {footerLinks.product.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-stone-500 hover:text-stone-300 transition-colors"
                {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-stone-200 mb-4">Resources</h3>
        <ul class="space-y-3">
          {footerLinks.resources.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-stone-500 hover:text-stone-300 transition-colors"
                {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-stone-200 mb-4">Company</h3>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-stone-500 hover:text-stone-300 transition-colors"
                {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-stone-200 mb-4">Legal</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-stone-500 hover:text-stone-300 transition-colors"
                {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-stone-800 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-sm text-stone-600">
        Â© {currentYear} ArtemisKit. Apache-2.0 License.
      </p>
      <p class="text-sm text-stone-600">
        Built with care for the developer community.
      </p>
    </div>
  </div>
</footer>
