---
/**
 * Footer Component - Site-wide Footer
 *
 * From Content Strategy - Appendix A: Key Links
 * - Website, GitHub, Documentation, npm Package
 *
 * Positioning from Content Strategy:
 * "ArtemisKit is for teams who want open-source freedom with production-grade capabilities."
 */

const footerLinks = {
  product: [
    { label: 'Features', href: '/#features' },
    { label: 'Use Cases', href: '/#use-cases' },
    { label: 'LLM Testing', href: '/llm-testing/' },
    { label: 'AI Security Testing', href: '/ai-security-testing/' },
    { label: 'Documentation', href: '/docs/' },
    { label: 'Sitemap', href: '/sitemap/' },
  ],
  resources: [
    { label: 'Getting Started', href: '/docs/cli/getting-started/' },
    { label: 'Red Team Testing', href: '/docs/cli/commands/redteam/' },
    { label: 'Prompt Injection Testing', href: '/prompt-injection-testing/' },
    { label: 'AI Red Team', href: '/ai-red-team/' },
    { label: 'Providers', href: '/docs/cli/providers/' },
    { label: 'CI/CD Integration', href: '/docs/cli/ci-cd/' },
  ],
  blog: [
    { label: 'All Posts', href: '/blog/' },
    { label: 'Changelog', href: '/blog/category/changelog/' },
    { label: 'Tutorials', href: '/blog/category/tutorials/' },
    { label: 'Security News', href: '/blog/category/security-news/' },
    { label: 'Engineering', href: '/blog/category/engineering/' },
    { label: 'Case Studies', href: '/blog/category/case-studies/' },
  ],
  community: [
    { label: 'GitHub', href: 'https://github.com/code-sensei/artemiskit', external: true },
    { label: 'npm Package', href: 'https://www.npmjs.com/package/@artemiskit/cli', external: true },
    { label: 'Roadmap', href: 'https://github.com/code-sensei/artemiskit/blob/main/ROADMAP.md', external: true },
    { label: 'Contributing', href: 'https://github.com/code-sensei/artemiskit/blob/main/CONTRIBUTING.md', external: true },
  ],
  legal: [
    { label: 'Privacy Policy', href: '/legal/privacy/' },
    { label: 'Terms of Service', href: '/legal/terms/' },
  ],
};

const currentYear = new Date().getFullYear();
---

<footer class="relative bg-[var(--theme-bg-primary)] border-t border-[var(--theme-border)]">
  <!-- Gradient accent line -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-1/2 h-px bg-gradient-to-r from-transparent via-orange-500/30 to-transparent"></div>

  <div class="container py-14 md:py-16">
    <div class="grid grid-cols-2 md:grid-cols-12 gap-8 lg:gap-12">

      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-4">
        <a href="/" class="inline-flex items-center mb-5">
          <img
            src="/artemiskit-logo.png"
            alt="ArtemisKit - Open Source LLM Testing Toolkit"
            class="h-7 w-auto"
            width="120"
            height="28"
            loading="lazy"
          />
        </a>

        <!-- Tagline from USP -->
        <p class="text-[var(--theme-text-tertiary)] text-sm leading-relaxed mb-6 max-w-xs">
          The open-source standard for LLM reliability. Security red-teaming, quality evaluation, and stress testing in one CLI.
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-3">
          <a
            href="https://github.com/code-sensei/artemiskit"
            target="_blank"
            rel="noopener noreferrer"
            class="w-9 h-9 rounded-lg bg-[var(--theme-bg-secondary)] hover:bg-[var(--theme-bg-tertiary)] border border-[var(--theme-border)] hover:border-[var(--theme-border-hover)] flex items-center justify-center text-[var(--theme-text-muted)] hover:text-[var(--theme-text-secondary)] transition-all duration-200"
            aria-label="GitHub"
          >
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Links Columns -->
      <div class="col-span-1 md:col-span-2 md:col-start-6">
        <h3 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase tracking-wider mb-4">Product</h3>
        <ul class="space-y-2.5">
          {footerLinks.product.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-[var(--theme-text-tertiary)] hover:text-[var(--theme-text-secondary)] transition-colors inline-flex items-center gap-1"
                {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                {link.label}
                {link.external && (
                  <svg class="w-3 h-3 opacity-40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M7 17L17 7M17 7H7M17 7V17" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="col-span-1 md:col-span-2">
        <h3 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase tracking-wider mb-4">Resources</h3>
        <ul class="space-y-2.5">
          {footerLinks.resources.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-[var(--theme-text-tertiary)] hover:text-[var(--theme-text-secondary)] transition-colors inline-flex items-center gap-1"
                {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                {link.label}
                {link.external && (
                  <svg class="w-3 h-3 opacity-40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M7 17L17 7M17 7H7M17 7V17" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="col-span-1 md:col-span-2">
        <h3 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase tracking-wider mb-4">Blog</h3>
        <ul class="space-y-2.5">
          {footerLinks.blog.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-[var(--theme-text-tertiary)] hover:text-[var(--theme-text-secondary)] transition-colors inline-flex items-center gap-1"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="col-span-1 md:col-span-2">
        <h3 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase tracking-wider mb-4">Community</h3>
        <ul class="space-y-2.5">
          {footerLinks.community.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-[var(--theme-text-tertiary)] hover:text-[var(--theme-text-secondary)] transition-colors inline-flex items-center gap-1"
                {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                {link.label}
                {link.external && (
                  <svg class="w-3 h-3 opacity-40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M7 17L17 7M17 7H7M17 7V17" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>

        <h3 class="text-xs font-semibold text-[var(--theme-text-muted)] uppercase tracking-wider mb-4 mt-6">Legal</h3>
        <ul class="space-y-2.5">
          {footerLinks.legal.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-[var(--theme-text-tertiary)] hover:text-[var(--theme-text-secondary)] transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-6 border-t border-[var(--theme-border-subtle)]">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-xs text-[var(--theme-text-muted)]">
          &copy; {currentYear} ArtemisKit. Released under the Apache-2.0 License.
        </p>

        <div class="flex items-center gap-4">
          <!-- Install badge -->
          <div class="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-[var(--theme-bg-secondary)] border border-[var(--theme-border)]">
            <span class="text-[var(--theme-primary)] font-mono text-xs">$</span>
            <code class="text-xs text-[var(--theme-text-tertiary)] font-mono">npm i -g @artemiskit/cli</code>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
