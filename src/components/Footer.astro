---
const footerLinks = {
  product: [
    { label: 'Features', href: '#features' },
    { label: 'How It Works', href: '#how-it-works' },
    { label: 'Documentation', href: '/docs/' },
    { label: 'Roadmap', href: 'https://github.com/code-sensei/artemiskit/blob/main/ROADMAP.md', external: true },
  ],
  resources: [
    { label: 'Getting Started', href: '/docs/cli/getting-started/' },
    { label: 'CLI Reference', href: '/docs/cli/commands/run/' },
    { label: 'Scenario Format', href: '/docs/cli/scenarios/format/' },
    { label: 'Contributing', href: 'https://github.com/code-sensei/artemiskit/blob/main/CONTRIBUTING.md', external: true },
  ],
  connect: [
    { label: 'GitHub', href: 'https://github.com/code-sensei/artemiskit', external: true },
  ],
  legal: [
    { label: 'Privacy Policy', href: '/legal/privacy' },
    { label: 'Terms of Service', href: '/legal/terms' },
  ],
};

const currentYear = new Date().getFullYear();
---

<footer class="relative bg-[#09090b] border-t border-zinc-800/50">
  <!-- Gradient line accent -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-1/3 h-px bg-gradient-to-r from-transparent via-orange-500/30 to-transparent"></div>

  <div class="container py-14 md:py-16">
    <div class="grid grid-cols-2 md:grid-cols-12 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-4">
        <a href="/" class="inline-flex items-center mb-4">
          <img
            src="/artemiskit-logo.png"
            alt="ArtemisKit"
            class="h-7 w-auto"
            height="28"
            loading="lazy"
          />
        </a>
        <p class="text-zinc-500 text-sm leading-relaxed mb-5 max-w-xs">
          Open-source LLM evaluation toolkit for developers and research teams. Apache-2.0 licensed.
        </p>

        <!-- GitHub Link -->
        <a
          href="https://github.com/code-sensei/artemiskit"
          target="_blank"
          rel="noopener noreferrer"
          class="w-9 h-9 rounded-lg bg-zinc-900 hover:bg-zinc-800 border border-zinc-800 hover:border-zinc-700 flex items-center justify-center text-zinc-500 hover:text-zinc-300 transition-all duration-200"
          aria-label="GitHub"
        >
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>

      <!-- Links Columns -->
      <div class="col-span-1 md:col-span-2 md:col-start-6">
        <h3 class="text-xs font-semibold text-zinc-400 uppercase tracking-wider mb-4">Product</h3>
        <ul class="space-y-2.5">
          {footerLinks.product.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors inline-flex items-center gap-1"
                {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                {link.label}
                {link.external && (
                  <svg class="w-3 h-3 opacity-40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M7 17L17 7M17 7H7M17 7V17" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="col-span-1 md:col-span-2">
        <h3 class="text-xs font-semibold text-zinc-400 uppercase tracking-wider mb-4">Resources</h3>
        <ul class="space-y-2.5">
          {footerLinks.resources.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors inline-flex items-center gap-1"
                {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
              >
                {link.label}
                {link.external && (
                  <svg class="w-3 h-3 opacity-40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M7 17L17 7M17 7H7M17 7V17" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="col-span-1 md:col-span-2">
        <h3 class="text-xs font-semibold text-zinc-400 uppercase tracking-wider mb-4">Connect</h3>
        <ul class="space-y-2.5">
          {footerLinks.connect.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors inline-flex items-center gap-1"
                target="_blank"
                rel="noopener noreferrer"
              >
                {link.label}
                <svg class="w-3 h-3 opacity-40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M7 17L17 7M17 7H7M17 7V17" />
                </svg>
              </a>
            </li>
          ))}
        </ul>

        <h3 class="text-xs font-semibold text-zinc-400 uppercase tracking-wider mb-4 mt-6">Legal</h3>
        <ul class="space-y-2.5">
          {footerLinks.legal.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-6 border-t border-zinc-800/50">
      <div class="flex flex-col md:flex-row items-center justify-between gap-3">
        <p class="text-xs text-zinc-600">
          &copy; {currentYear} ArtemisKit. Released under the Apache-2.0 License.
        </p>
        <p class="text-xs text-zinc-600">
          Built for the developer community
        </p>
      </div>
    </div>
  </div>
</footer>
