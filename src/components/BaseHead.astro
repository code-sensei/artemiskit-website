---
interface Props {
  title: string;
  description: string;
  image?: string;
  noindex?: boolean;
  faq?: Array<{ question: string; answer: string }>;
  breadcrumbs?: Array<{ name: string; url: string }>;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description, image = '/og-image.png', noindex = false, faq, breadcrumbs } = Astro.props;

// Check if this is the homepage for FAQ schema
const isHomepage = Astro.url.pathname === '/' || Astro.url.pathname === '';

// FAQ Schema for homepage
const homepageFAQ = [
  {
    question: "What is ArtemisKit?",
    answer: "ArtemisKit is an open-source CLI toolkit for testing LLM applications. It combines security red-teaming, quality evaluation, and stress testing in a single tool, replacing the need for 3+ separate tools."
  },
  {
    question: "Is ArtemisKit free to use?",
    answer: "Yes, ArtemisKit CLI is completely free and open-source under the Apache 2.0 license. You can use it for personal and commercial projects without any cost."
  },
  {
    question: "What security tests does ArtemisKit perform?",
    answer: "ArtemisKit tests for 6 mutation types including prompt injection, jailbreak attempts, role spoofing, instruction flipping, encoding attacks, and multi-turn conversation attacks. Each vulnerability is scored using a CVSS-like severity system."
  },
  {
    question: "How do I install ArtemisKit?",
    answer: "Install ArtemisKit globally via npm with: npm install -g @artemiskit/cli. You can also use pnpm, yarn, or bun. After installation, verify with: akit --version"
  },
  {
    question: "What LLM providers does ArtemisKit support?",
    answer: "ArtemisKit supports OpenAI, Anthropic (Claude), Azure OpenAI, and any OpenAI-compatible API. It also integrates with Vercel AI SDK for additional provider support."
  },
  {
    question: "Can I use ArtemisKit in CI/CD pipelines?",
    answer: "Yes, ArtemisKit is designed for CI/CD integration. It returns proper exit codes (0 for pass, 1 for failures) and can generate JSON reports for automated processing."
  }
];

// JSON-LD Structured Data
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "ArtemisKit",
  "url": "https://artemiskit.vercel.app",
  "logo": "https://artemiskit.vercel.app/artemiskit-icon.png",
  "description": "Open-source LLM evaluation toolkit for developers and research teams.",
  "sameAs": [
    "https://github.com/code-sensei/artemiskit"
  ]
};

const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "ArtemisKit CLI",
  "applicationCategory": "DeveloperApplication",
  "operatingSystem": "macOS, Windows, Linux",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "description": "CLI tool for testing LLM applications with quality checks, security scans, and stress tests.",
  "downloadUrl": "https://www.npmjs.com/package/@artemiskit/cli",
  "softwareVersion": "latest",
  "author": {
    "@type": "Organization",
    "name": "ArtemisKit"
  }
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "ArtemisKit",
  "url": "https://artemiskit.vercel.app",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://artemiskit.vercel.app/docs/?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};

// FAQ Schema (for homepage or custom FAQ)
const faqItems = faq || (isHomepage ? homepageFAQ : null);
const faqSchema = faqItems ? {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqItems.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
} : null;

// Breadcrumb Schema
const breadcrumbSchema = breadcrumbs ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url
  }))
} : null;
---

<!-- Theme Initialization (prevents flash of wrong theme) -->
<script is:inline>
(function() {
  const STORAGE_KEY = 'artemiskit-theme';
  const stored = localStorage.getItem(STORAGE_KEY);
  let theme = stored || 'system';

  if (theme === 'system') {
    theme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  }

  document.documentElement.classList.remove('light', 'dark', 'high-contrast');
  document.documentElement.classList.add(theme);
})();
</script>

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />

<!-- Favicon & Icons -->
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
<link rel="icon" type="image/png" sizes="192x192" href="/icon-192.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />

<meta name="generator" content={Astro.generator} />

<!-- Fonts - Geist from Vercel CDN -->
<link rel="preconnect" href="https://cdn.vercel.com" crossorigin />
<link
  rel="preload"
  as="style"
  href="https://cdn.vercel.com/geist/fonts/geist-sans/styles.css"
/>
<link
  rel="preload"
  as="style"
  href="https://cdn.vercel.com/geist/fonts/geist-mono/styles.css"
/>
<link
  rel="stylesheet"
  href="https://cdn.vercel.com/geist/fonts/geist-sans/styles.css"
/>
<link
  rel="stylesheet"
  href="https://cdn.vercel.com/geist/fonts/geist-mono/styles.css"
/>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content="ArtemisKit" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={Astro.url} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={new URL('/twitter-image.png', Astro.url)} />

<!-- Theme Color -->
<meta name="theme-color" content="#0c0a09" />
<meta name="msapplication-TileColor" content="#f97316" />

<!-- Additional Meta Tags -->
<meta name="author" content="ArtemisKit" />
<meta name="keywords" content="LLM testing, AI evaluation, prompt testing, CLI tool, developer tools, open source, machine learning, quality assurance, red team, stress testing" />

<!-- Robots -->
{noindex ? (
  <meta name="robots" content="noindex, nofollow" />
) : (
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
)}
<meta name="googlebot" content={noindex ? "noindex, nofollow" : "index, follow"} />

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
{faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}
{breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
