---
interface Props {
  title: string;
  description: string;
  icon: string;
  features?: string[];
  code?: string;
  codeLanguage?: string;
}

const { title, description, icon, features, code, codeLanguage = 'yaml' } = Astro.props;
---

<div class="card group h-full flex flex-col">
  <!-- Icon -->
  <div class="w-12 h-12 rounded-xl bg-primary-500/10 border border-primary-500/20 flex items-center justify-center mb-5 group-hover:bg-primary-500/20 group-hover:border-primary-500/30 transition-colors">
    <Fragment set:html={icon} />
  </div>

  <!-- Content -->
  <h3 class="text-xl font-semibold text-stone-50 mb-3">{title}</h3>
  <p class="text-stone-400 mb-4 flex-grow">{description}</p>

  <!-- Feature List -->
  {features && features.length > 0 && (
    <ul class="space-y-2 mb-5">
      {features.map((feature) => (
        <li class="flex items-center gap-2 text-sm text-stone-500">
          <svg class="w-4 h-4 text-primary-500 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12" />
          </svg>
          {feature}
        </li>
      ))}
    </ul>
  )}

  <!-- Code Preview -->
  {code && (
    <div class="mt-auto pt-4 border-t border-stone-800">
      <pre class="text-xs text-stone-500 font-mono overflow-x-auto"><code>{code}</code></pre>
    </div>
  )}
</div>
