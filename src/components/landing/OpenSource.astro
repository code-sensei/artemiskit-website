---
import Button from '../ui/Button.astro';
import GitHubStats from './GitHubStats';
---

<section class="relative py-24 md:py-32 bg-zinc-950/50">
  <!-- Background -->
  <div class="absolute inset-0" aria-hidden="true">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#18181b_1px,transparent_1px),linear-gradient(to_bottom,#18181b_1px,transparent_1px)] bg-[size:4rem_4rem] opacity-20"></div>
  </div>

  <div class="container relative">
    <div class="max-w-3xl mx-auto text-center">
      <!-- Header -->
      <div class="mb-10">
        <span class="inline-block px-3 py-1 text-xs font-medium tracking-wider uppercase text-orange-400 bg-orange-500/10 border border-orange-500/20 rounded-full mb-4">
          Open Source
        </span>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-zinc-100 mb-4 tracking-tight">
          Open Source at Heart
        </h2>
        <p class="text-lg text-zinc-500 max-w-2xl mx-auto">
          ArtemisKit is Apache-2.0 licensed and open source. Contribute, customize, and build on a foundation you control.
        </p>
      </div>

      <!-- GitHub Stats -->
      <div class="mb-10">
        <GitHubStats client:idle />
      </div>

      <!-- CTAs -->
      <div class="flex flex-wrap justify-center gap-3 mb-10">
        <Button href="https://github.com/code-sensei/artemiskit" variant="primary" size="md" external>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Star on GitHub
        </Button>
        <Button href="https://github.com/code-sensei/artemiskit/blob/main/CONTRIBUTING.md" variant="secondary" size="md" external>
          Contribute
        </Button>
        <Button href="https://github.com/code-sensei/artemiskit/blob/main/ROADMAP.md" variant="outline" size="md" external>
          View Roadmap
        </Button>
      </div>

      <!-- License Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-zinc-900/60 border border-zinc-800 text-sm text-zinc-500">
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M12 2L3 7v7c0 5.25 3.82 10.14 9 11 5.18-.86 9-5.75 9-11V7l-9-5z" />
          <path d="M9 12l2 2 4-4" />
        </svg>
        <span>Licensed under Apache-2.0</span>
      </div>
    </div>
  </div>
</section>
