---
import SectionHeading from '../ui/SectionHeading.astro';
import Button from '../ui/Button.astro';
import GitHubStats from './GitHubStats';
---

<section class="section relative bg-bg-secondary">
  <div class="container">
    <div class="max-w-3xl mx-auto text-center">
      <SectionHeading
        badge="Open Source"
        title="Open Source at Heart"
        subtitle="ArtemisKit is Apache-2.0 licensed and open source. Contribute, customize, and build on a foundation you control."
      />

      <!-- GitHub Stats -->
      <div class="mb-10">
        <GitHubStats client:idle />
      </div>

      <!-- CTAs -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <Button href="https://github.com/code-sensei/artemiskit" variant="primary" size="lg" external>
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
          </svg>
          Star on GitHub
        </Button>
        <Button href="https://github.com/code-sensei/artemiskit/blob/main/CONTRIBUTING.md" variant="secondary" size="lg" external>
          Contribute
        </Button>
        <Button href="https://github.com/code-sensei/artemiskit/blob/main/ROADMAP.md" variant="ghost" size="lg" external>
          View Roadmap
        </Button>
      </div>

      <!-- License Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-stone-900/50 border border-stone-800 text-sm text-stone-500">
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
          <path d="M7 11V7a5 5 0 0 1 10 0v4" />
        </svg>
        <span>Licensed under Apache-2.0</span>
      </div>
    </div>
  </div>
</section>
