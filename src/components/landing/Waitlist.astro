---
import GradientOrb from '../ui/GradientOrb.astro';
import WaitlistForm from './WaitlistForm';

const cloudFeatures = [
  {
    title: 'Team Workspaces',
    description: 'Collaborate on evaluation suites',
    icon: `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
      <circle cx="9" cy="7" r="4" />
      <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
      <path d="M16 3.13a4 4 0 0 1 0 7.75" />
    </svg>`,
  },
  {
    title: 'Scheduled Runs',
    description: 'Automated periodic testing',
    icon: `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="10" />
      <polyline points="12 6 12 12 16 14" />
    </svg>`,
  },
  {
    title: 'Historical Analytics',
    description: 'Track quality over time',
    icon: `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="18" y1="20" x2="18" y2="10" />
      <line x1="12" y1="20" x2="12" y2="4" />
      <line x1="6" y1="20" x2="6" y2="14" />
    </svg>`,
  },
  {
    title: 'Managed Infrastructure',
    description: 'No setup required',
    icon: `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="2" y="3" width="20" height="14" rx="2" ry="2" />
      <line x1="8" y1="21" x2="16" y2="21" />
      <line x1="12" y1="17" x2="12" y2="21" />
    </svg>`,
  },
  {
    title: 'API Access',
    description: 'Programmatic control',
    icon: `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="16 18 22 12 16 6" />
      <polyline points="8 6 2 12 8 18" />
    </svg>`,
  },
  {
    title: 'Integrations',
    description: 'Slack, PagerDuty, Jira',
    icon: `<svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="3" width="7" height="7" />
      <rect x="14" y="3" width="7" height="7" />
      <rect x="14" y="14" width="7" height="7" />
      <rect x="3" y="14" width="7" height="7" />
    </svg>`,
  },
];
---

<section id="waitlist" class="section relative overflow-hidden">
  <!-- Background Effects -->
  <GradientOrb position="center" size="xl" intensity="subtle" />

  <div class="container relative">
    <div class="max-w-5xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left - Content -->
        <div>
          <span class="badge badge-primary mb-4 inline-block">Coming Soon</span>
          <h2 class="text-3xl md:text-4xl font-semibold text-stone-50 mb-4 tracking-tight">
            ArtemisKit Cloud is Coming
          </h2>
          <p class="text-lg text-stone-400 mb-8">
            The power of ArtemisKit with managed infrastructure, team collaboration, and advanced analytics.
          </p>

          <!-- Cloud Features Preview -->
          <div class="grid sm:grid-cols-2 gap-4">
            {cloudFeatures.map((feature) => (
              <div class="flex items-start gap-3 p-3 rounded-lg bg-stone-900/30 border border-stone-800/50">
                <div class="w-10 h-10 rounded-lg bg-primary-500/10 border border-primary-500/20 flex items-center justify-center flex-shrink-0 text-primary-500">
                  <Fragment set:html={feature.icon} />
                </div>
                <div>
                  <h4 class="text-sm font-medium text-stone-200">{feature.title}</h4>
                  <p class="text-xs text-stone-500">{feature.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Right - Form -->
        <div class="lg:pl-8">
          <div class="p-8 rounded-2xl bg-stone-900/50 border border-stone-800 backdrop-blur-sm">
            <h3 class="text-xl font-semibold text-stone-100 mb-2">Join the Waitlist</h3>
            <p class="text-stone-500 mb-6">Be the first to know when we launch.</p>

            <WaitlistForm client:load />
          </div>

          <!-- Social Proof -->
          <p class="text-center text-sm text-stone-600 mt-4">
            Join 500+ developers on the waitlist
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
