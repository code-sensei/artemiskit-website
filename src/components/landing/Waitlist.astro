---
/**
 * Waitlist Section - ArtemisKit Cloud CTA
 *
 * Maintains existing Cloud messaging while aligning
 * with overall brand voice and visual design.
 */

import WaitlistForm from './WaitlistForm';

const upcomingFeatures = [
  {
    title: 'Team Workspaces',
    description: 'Collaborate on evaluation suites',
    icon: `<svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
      <circle cx="9" cy="7" r="4" />
      <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75" />
    </svg>`,
  },
  {
    title: 'Scheduled Runs',
    description: 'Automated periodic testing',
    icon: `<svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <circle cx="12" cy="12" r="10" />
      <polyline points="12 6 12 12 16 14" />
    </svg>`,
  },
  {
    title: 'Historical Analytics',
    description: 'Track trends over time',
    icon: `<svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <path d="M3 3v18h18" />
      <path d="M18 9l-5 5-4-4-3 3" />
    </svg>`,
  },
  {
    title: 'Dashboard',
    description: 'Visualize results at a glance',
    icon: `<svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <rect x="3" y="3" width="7" height="7" rx="1" />
      <rect x="14" y="3" width="7" height="4" rx="1" />
      <rect x="14" y="10" width="7" height="11" rx="1" />
      <rect x="3" y="13" width="7" height="8" rx="1" />
    </svg>`,
  },
  {
    title: 'REST API & SDKs',
    description: 'Programmatic control',
    icon: `<svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <polyline points="16 18 22 12 16 6" />
      <polyline points="8 6 2 12 8 18" />
    </svg>`,
  },
  {
    title: 'Integrations',
    description: 'Slack, PagerDuty, Jira',
    icon: `<svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <path d="M12 2L2 7l10 5 10-5-10-5z" />
      <path d="M2 17l10 5 10-5" />
      <path d="M2 12l10 5 10-5" />
    </svg>`,
  },
];
---

<section id="waitlist" class="relative py-24 md:py-32 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-[var(--theme-bg-secondary)]">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_50%_at_50%_0%,rgba(249,115,22,0.06),transparent_50%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_60%_40%_at_80%_100%,rgba(249,115,22,0.04),transparent_40%)]"></div>
  </div>

  <div class="container relative">
    <div class="max-w-5xl mx-auto">

      <!-- Section Header -->
      <div class="text-center mb-14">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-orange-500/10 border border-orange-500/20 mb-6">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-orange-500"></span>
          </span>
          <span class="text-sm font-semibold text-orange-400">Coming Soon</span>
        </div>

        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-[var(--theme-text-primary)] mb-4 tracking-tight">
          ArtemisKit Cloud
        </h2>
        <p class="text-lg text-[var(--theme-text-secondary)] max-w-2xl mx-auto">
          The CLI you love, with managed infrastructure, team collaboration,
          and advanced analytics. <span class="text-[var(--theme-text-primary)] font-medium">Zero setup required.</span>
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-10 lg:gap-14 items-start">

        <!-- Left - Features Grid -->
        <div>
          <h3 class="text-sm font-semibold text-[var(--theme-text-muted)] uppercase tracking-wider mb-6">
            What's coming
          </h3>

          <div class="grid sm:grid-cols-2 gap-4">
            {upcomingFeatures.map((feature) => (
              <div class="flex items-start gap-3 p-4 rounded-xl bg-[var(--theme-bg-card)] border border-[var(--theme-border)] hover:border-orange-500/20 transition-all duration-300">
                <div class="w-9 h-9 rounded-lg bg-orange-500/10 border border-orange-500/20 flex items-center justify-center text-orange-400 flex-shrink-0">
                  <Fragment set:html={feature.icon} />
                </div>
                <div>
                  <h4 class="text-sm font-semibold text-[var(--theme-text-primary)]">{feature.title}</h4>
                  <p class="text-xs text-[var(--theme-text-muted)]">{feature.description}</p>
                </div>
              </div>
            ))}
          </div>

          <!-- Additional info -->
          <div class="mt-6 flex flex-wrap items-center gap-5 text-sm text-[var(--theme-text-tertiary)]">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-emerald-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              <span>Free tier available</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-emerald-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <polyline points="20 6 9 17 4 12" />
              </svg>
              <span>No credit card required</span>
            </div>
          </div>
        </div>

        <!-- Right - Form -->
        <div>
          <div class="relative p-6 md:p-8 rounded-2xl bg-[var(--theme-bg-card)] border border-[var(--theme-border)]">
            <!-- Accent line -->
            <div class="absolute top-0 left-8 right-8 h-px bg-gradient-to-r from-transparent via-orange-500/40 to-transparent"></div>

            <div class="relative">
              <h3 class="text-xl font-bold text-[var(--theme-text-primary)] mb-2">Get Early Access</h3>
              <p class="text-sm text-[var(--theme-text-tertiary)] mb-6">Be first in line when we launch.</p>

              <WaitlistForm
                type="cloud"
                successTitle="You're on the list!"
                successMessage="We'll notify you when ArtemisKit Cloud is ready."
                client:load
              />
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
