---
import SectionHeading from '../ui/SectionHeading.astro';

const steps = [
  {
    number: '01',
    title: 'Install',
    description: 'Install globally with npm, yarn, pnpm, or bun',
    code: `npm install -g @artemiskit/cli

# or run directly
npx @artemiskit/cli --help`,
  },
  {
    number: '02',
    title: 'Define',
    description: 'Define your test scenarios in simple YAML',
    code: `# scenarios/my-test.yaml
name: chatbot-test
config:
  provider: openai
  model: gpt-4

scenarios:
  - name: basic-qa
    turns:
      - role: user
        content: "What is 2+2?"
      - role: assistant
        expect:
          contains: ["4"]`,
  },
  {
    number: '03',
    title: 'Run',
    description: 'Run tests and get detailed reports',
    code: `$ artemiskit run scenarios/my-test.yaml

Running chatbot-test...
✓ Scenario: basic-qa ........... PASS

Results: 1/1 passed (100%)
→ artemis-output/report.html`,
  },
];
---

<section id="how-it-works" class="relative py-24 md:py-32 bg-zinc-950/50">
  <!-- Background -->
  <div class="absolute inset-0" aria-hidden="true">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#18181b_1px,transparent_1px),linear-gradient(to_bottom,#18181b_1px,transparent_1px)] bg-[size:4rem_4rem] opacity-30"></div>
  </div>

  <div class="container relative">
    <SectionHeading
      badge="Quick Start"
      title="Get Started in 3 Steps"
      subtitle="From installation to your first test results in under 5 minutes."
    />

    <div class="relative max-w-5xl mx-auto">
      <!-- Connection Line (Desktop) -->
      <div class="hidden lg:block absolute top-[3.25rem] left-[7rem] right-[7rem] h-px" aria-hidden="true">
        <div class="w-full h-full bg-gradient-to-r from-orange-500/40 via-orange-500/20 to-orange-500/40"></div>
      </div>

      <div class="grid lg:grid-cols-3 gap-10 lg:gap-8">
        {steps.map((step, index) => (
          <div
            class="relative opacity-0 animate-fade-in"
            style={`animation-delay: ${index * 150}ms; animation-fill-mode: forwards;`}
          >
            {/* Step Header */}
            <div class="flex items-center gap-4 mb-6">
              <div class="relative">
                <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-orange-500/10 to-amber-500/10 border border-orange-500/30 flex items-center justify-center">
                  <span class="text-xl font-bold text-orange-400">{step.number}</span>
                </div>
                {/* Glow effect */}
                <div class="absolute -inset-1 bg-orange-500/10 rounded-xl blur-md -z-10"></div>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-zinc-100">{step.title}</h3>
                <p class="text-sm text-zinc-500">{step.description}</p>
              </div>
            </div>

            {/* Code Block */}
            <div class="relative rounded-xl overflow-hidden border border-zinc-800/60 bg-[#0c0c0e]">
              {/* Header */}
              <div class="flex items-center gap-1.5 px-4 py-3 bg-zinc-900/60 border-b border-zinc-800/50">
                <div class="w-2.5 h-2.5 rounded-full bg-zinc-700"></div>
                <div class="w-2.5 h-2.5 rounded-full bg-zinc-700"></div>
                <div class="w-2.5 h-2.5 rounded-full bg-zinc-700"></div>
              </div>
              {/* Content */}
              <div class="p-4 overflow-x-auto">
                <pre class="text-[13px] leading-relaxed"><code class="text-zinc-400 font-mono">{step.code}</code></pre>
              </div>
            </div>
          </div>
        ))}
      </div>

      {/* CTA */}
      <div class="text-center mt-12">
        <a
          href="/docs/cli/getting-started/"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-gradient-to-b from-orange-500 to-orange-600 text-white font-medium shadow-sm shadow-orange-500/20 hover:from-orange-400 hover:to-orange-500 hover:shadow-md hover:shadow-orange-500/25 transition-all duration-200"
        >
          <span>Read the Documentation</span>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out;
  }
</style>
