---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Blog FAQ for structured data
const blogFAQ = [
  {
    question: "What topics does the ArtemisKit blog cover?",
    answer: "The ArtemisKit blog covers AI security news, LLM testing tutorials, engineering deep-dives, real-world case studies, and product changelog updates."
  },
  {
    question: "How often is the ArtemisKit blog updated?",
    answer: "We publish new content regularly including security incident analysis, step-by-step tutorials, and technical guides for LLM testing."
  },
  {
    question: "Who writes for the ArtemisKit blog?",
    answer: "Content is written by the ArtemisKit team and guest contributors with expertise in AI security, LLM evaluation, and software engineering."
  }
];

// Breadcrumbs
const breadcrumbs = [
  { name: 'Home', url: 'https://artemiskit.vercel.app/' },
  { name: 'Blog', url: 'https://artemiskit.vercel.app/blog/' },
];

// Get all blog posts, sorted by date (newest first)
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get featured posts
const featuredPosts = sortedPosts.filter(post => post.data.featured).slice(0, 3);
const recentPosts = sortedPosts.filter(post => !post.data.featured);

// Category info
const categories = [
  { slug: 'changelog', label: 'Changelog', description: 'Latest updates and releases', color: 'bg-blue-500/20 text-blue-400 border-blue-500/30', hoverColor: 'hover:bg-blue-500/30' },
  { slug: 'tutorials', label: 'Tutorials', description: 'Step-by-step guides', color: 'bg-green-500/20 text-green-400 border-green-500/30', hoverColor: 'hover:bg-green-500/30' },
  { slug: 'security-news', label: 'Security News', description: 'AI security incidents & analysis', color: 'bg-red-500/20 text-red-400 border-red-500/30', hoverColor: 'hover:bg-red-500/30' },
  { slug: 'engineering', label: 'Engineering', description: 'Technical deep-dives', color: 'bg-purple-500/20 text-purple-400 border-purple-500/30', hoverColor: 'hover:bg-purple-500/30' },
  { slug: 'case-studies', label: 'Case Studies', description: 'Real-world implementations', color: 'bg-amber-500/20 text-amber-400 border-amber-500/30', hoverColor: 'hover:bg-amber-500/30' },
];

// Get category counts
const categoryCounts = categories.reduce((acc, cat) => {
  acc[cat.slug] = sortedPosts.filter(post => post.data.category === cat.slug).length;
  return acc;
}, {} as Record<string, number>);

// Format date helper
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  }).format(date);
};

// Get category label
const getCategoryInfo = (slug: string) => categories.find(c => c.slug === slug) || { label: slug, color: 'bg-zinc-500/20 text-zinc-400 border-zinc-500/30', hoverColor: 'hover:bg-zinc-500/30' };
---

<Layout
  title="ArtemisKit Blog - AI Security News & LLM Testing Guides"
  description="AI security news, LLM testing tutorials, and engineering deep-dives. Learn to test, secure, and stress-test your AI applications."
  faq={blogFAQ}
  breadcrumbs={breadcrumbs}
>
  <div class="py-20 md:py-32">
    <!-- Hero Section -->
    <header class="max-w-7xl mx-auto px-6 lg:px-8 mb-20">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-1.5 text-sm font-medium text-orange-400 bg-orange-500/10 border border-orange-500/20 rounded-full mb-6">
          Blog
        </span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 tracking-tight">
          Insights & Updates
        </h1>
        <p class="text-lg md:text-xl text-zinc-400 leading-relaxed">
          Security insights, tutorials, and engineering deep-dives for teams building production-ready AI applications.
        </p>
      </div>
    </header>

    <!-- Category Filter -->
    <div class="max-w-7xl mx-auto px-6 lg:px-8 mb-16">
      <div class="flex flex-wrap gap-3">
        <a
          href="/blog/"
          class="px-5 py-2.5 bg-orange-500/20 text-orange-400 border border-orange-500/30 rounded-full text-sm font-medium hover:bg-orange-500/30 transition-all duration-200"
        >
          All Posts ({sortedPosts.length})
        </a>
        {categories.map(cat => (
          <a
            href={`/blog/category/${cat.slug}/`}
            class={`px-5 py-2.5 ${cat.color} border rounded-full text-sm font-medium ${cat.hoverColor} transition-all duration-200`}
          >
            {cat.label} ({categoryCounts[cat.slug] || 0})
          </a>
        ))}
      </div>
    </div>

    <!-- Featured Posts -->
    {featuredPosts.length > 0 && (
      <section class="max-w-7xl mx-auto px-6 lg:px-8 mb-24">
        <div class="flex items-center gap-3 mb-10">
          <div class="p-2 bg-orange-500/10 rounded-lg">
            <svg class="w-5 h-5 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          </div>
          <h2 class="text-2xl font-bold text-white">Featured</h2>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredPosts.map(post => {
            const catInfo = getCategoryInfo(post.data.category);
            return (
              <a
                href={`/blog/${post.id.replace(/\.mdx$/, '')}/`}
                class="group block bg-zinc-900/60 border border-zinc-800/80 rounded-2xl overflow-hidden hover:border-zinc-700 hover:bg-zinc-900/80 transition-all duration-300 hover:shadow-xl hover:shadow-black/20"
              >
                {post.data.image && (
                  <div class="aspect-[16/10] overflow-hidden">
                    <img
                      src={post.data.image.src}
                      alt={post.data.image.alt}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="p-7">
                  <span class={`inline-block px-3 py-1.5 text-xs font-medium rounded-full border mb-4 ${catInfo.color}`}>
                    {catInfo.label}
                  </span>
                  <h3 class="text-xl font-semibold text-white group-hover:text-orange-400 transition-colors duration-200 mb-3 line-clamp-2 leading-snug">
                    {post.data.title}
                  </h3>
                  <p class="text-zinc-400 text-sm line-clamp-2 mb-5 leading-relaxed">
                    {post.data.description}
                  </p>
                  <div class="flex items-center justify-between text-sm text-zinc-500 pt-4 border-t border-zinc-800/50">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {formatDate(post.data.pubDate)}
                    </time>
                    {post.data.readingTime && (
                      <span class="flex items-center gap-1.5">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        {post.data.readingTime} min
                      </span>
                    )}
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </section>
    )}

    <!-- All Posts Grid -->
    <section class="max-w-7xl mx-auto px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-white mb-10">
        {featuredPosts.length > 0 ? 'Recent Posts' : 'All Posts'}
      </h2>

      {recentPosts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {recentPosts.map(post => {
            const catInfo = getCategoryInfo(post.data.category);
            return (
              <a
                href={`/blog/${post.id.replace(/\.mdx$/, '')}/`}
                class="group block bg-zinc-900/40 border border-zinc-800/60 rounded-2xl p-7 hover:border-zinc-700 hover:bg-zinc-900/60 transition-all duration-300"
              >
                <span class={`inline-block px-3 py-1.5 text-xs font-medium rounded-full border mb-4 ${catInfo.color}`}>
                  {catInfo.label}
                </span>
                <h3 class="text-lg font-semibold text-white group-hover:text-orange-400 transition-colors duration-200 mb-3 line-clamp-2 leading-snug">
                  {post.data.title}
                </h3>
                <p class="text-zinc-400 text-sm line-clamp-3 mb-5 leading-relaxed">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between text-sm text-zinc-500 pt-4 border-t border-zinc-800/50">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                  {post.data.readingTime && (
                    <span class="flex items-center gap-1.5">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {post.data.readingTime} min
                    </span>
                  )}
                </div>
              </a>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-20 bg-zinc-900/40 border border-zinc-800/60 rounded-2xl">
          <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-zinc-800/50 flex items-center justify-center">
            <svg class="w-8 h-8 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <p class="text-zinc-300 text-lg mb-3">No blog posts yet.</p>
          <p class="text-zinc-500">Check back soon for updates, tutorials, and security insights.</p>
        </div>
      )}
    </section>

    <!-- Newsletter CTA -->
    <section class="max-w-7xl mx-auto px-6 lg:px-8 mt-24">
      <div class="relative overflow-hidden bg-gradient-to-br from-zinc-900 via-zinc-900 to-zinc-800/50 border border-zinc-800 rounded-3xl p-10 md:p-16">
        <!-- Background decoration -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-orange-500/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-blue-500/5 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

        <div class="relative text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Stay in the loop</h2>
          <p class="text-zinc-400 mb-10 max-w-xl mx-auto text-lg leading-relaxed">
            Get notified about new tutorials, security insights, and ArtemisKit releases.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 max-w-md mx-auto">
            <a
              href="https://github.com/code-sensei/artemiskit"
              target="_blank"
              rel="noopener noreferrer"
              class="w-full sm:w-auto px-8 py-4 bg-zinc-800 hover:bg-zinc-700 text-white font-medium rounded-xl transition-all duration-200 flex items-center justify-center gap-3 border border-zinc-700/50 hover:border-zinc-600"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
              </svg>
              Star on GitHub
            </a>
            <a
              href="/docs/"
              class="w-full sm:w-auto px-8 py-4 bg-orange-500 hover:bg-orange-600 text-white font-medium rounded-xl transition-all duration-200"
            >
              Read the Docs
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
